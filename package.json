{
  "name": "pm2-bridge",
  "version": "0.0.1",
  "description": "Interprocess communication with pm2",
  "main": "src/index.js",
  "scripts": {
    "test": "npm run start && mocha --timeout 5000 --require should; npm run delete",
    "start": "pm2 startOrRestart ./start.json || echo 'please install pm2: npm i -g pm2'",
    "delete": "pm2 delete ./start.json"
  },
  "bin": {
    "start": "bin/pm2-bridge"
  },
  "keywords": [
    "pm2",
    "process"
  ],
  "author": "Daniel Kostro <kostro.d@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "mocha": "^2.5.3",
    "should": "^9.0.0",
    "pm2": "^1.1.3"
  }
}
